pipeline {
    agent {
        docker {
            image 'node:20'
            args '-u root:root'  // optional: run as root
        }
    }

    environment {
        APP_ID = "f8Cq0JwIpIz7gBQ4se_ML"
    }

    parameters {
        string(name: 'DEPLOY_URL_CRED_ID', defaultValue: 'DEPLOY_URL', description: 'Deployment URL credentials ID')
        string(name: 'DEPLOY_KEY_CRED_ID', defaultValue: 'DEPLOY_KEY', description: 'Deployment API key credentials ID')
        string(name: 'VITE_CANDIDATES_ENDPOINT', defaultValue: 'VITE_CANDIDATES_ENDPOINT', description: 'Frontend API endpoint')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Setup .env') {
            steps {
                sh "echo 'VITE_CANDIDATES_ENDPOINT=${params.VITE_CANDIDATES_ENDPOINT}' > .env"
                sh 'echo ".env created"'
            }
        }

        stage('Install dependencies') {
            steps {
                sh 'node -v && npm -v && npm ci || npm install'
            }
        }

        stage('Run tests') {
            steps {
                sh 'npm test -- --run'
            }
        }
    }

    post {
        success {
            echo "✅ Tests passed, triggering deployment API..."
            withCredentials([
                string(credentialsId: params.DEPLOY_URL_CRED_ID, variable: 'DEPLOY_URL'),
                string(credentialsId: params.DEPLOY_KEY_CRED_ID, variable: 'DEPLOY_KEY')
            ]) {
                sh '''
                    json_payload=$(printf '{"applicationId":"%s"}' "$APP_ID")
                    curl -fS -X POST "$DEPLOY_URL" \
                        -H 'accept: application/json' \
                        -H 'Content-Type: application/json' \
                        -H "x-api-key: $DEPLOY_KEY" \
                        --data-binary "$json_payload"
                '''
            }
        }

        failure {
            echo "❌ Pipeline failed, sending email..."
            mail to: 'ummekulsum9855@gmail.com',
                 subject: "Jenkins Failure: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                 body: "Pipeline failed. Check Jenkins console output."
        }
    }
}
